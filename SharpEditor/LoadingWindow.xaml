<Window x:Class="SharpEditor.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpEditor"
        mc:Ignorable="d"
        Title="Loading Sharp Sheets..." Height="200" Width="385"
		WindowStyle="None"
		Background="#424245"
		BorderThickness="0"
		ResizeMode="NoResize"
		WindowStartupLocation="CenterScreen">
	<DockPanel Margin="4">
		<TextBlock DockPanel.Dock="Top"></TextBlock>
		<TextBlock DockPanel.Dock="Bottom" Name="VersionTextBlock" Foreground="Gray" HorizontalAlignment="Left" Padding="6,0,0,0">Version 0.0.0.0</TextBlock>
		<StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,2">
			<Image Source="Images/Logo.png" Height="150"/>
			<TextBlock
				VerticalAlignment="Center"
				Foreground="White"
				FontSize="50"
				FontFamily="Courier New">
				Sharp<LineBreak/>Sheets
			</TextBlock>
		</StackPanel>
	</DockPanel>
</Window>
